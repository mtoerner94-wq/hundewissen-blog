<section class="py-24 bg-bg-light">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Section Heading -->
    <div class="scroll-fade-in text-center mb-16">
      <span class="text-sm font-medium text-primary uppercase tracking-widest">
        Fun Facts
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mt-2">
        Wusstest du schon?
      </h2>
    </div>

    <!-- Facts Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {facts.map((fact, i) => (
        <div class={`scroll-fade-in stagger-${Math.min(i + 1, 3)} bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow duration-300`}>
          <span class="text-3xl mb-3 block">{fact.emoji}</span>
          <h3 class="font-semibold text-slate-900">{fact.title}</h3>
          <p class="text-sm text-slate-500 mt-2">{fact.description}</p>
        </div>
      ))}
