---
interface Props {
  faqs: Array<{ question: string; answer: string }>;
}

const { faqs } = Astro.props;
---

{faqs && faqs.length > 0 && (
  <section class="faq-section mt-12">
    <h2 class="text-2xl font-bold text-slate-900 mb-6">
      H&auml;ufig gestellte Fragen
    </h2>

    <div class="rounded-xl border border-slate-200 overflow-hidden">
      {faqs.map((faq, index) => (
        <div
          class:list={[
            'faq-item',
            index < faqs.length - 1 ? 'border-b border-slate-200' : '',
          ]}
        >
          <button
            type="button"
            class="faq-trigger w-full font-medium text-slate-900 py-4 px-6 cursor-pointer flex items-center justify-between gap-4 hover:bg-slate-50 transition-colors duration-200 text-left"
            aria-expanded="false"
          >
            <span>{faq.question}</span>
            <svg
              class="faq-chevron w-5 h-5 shrink-0 text-slate-400 transition-transform duration-300"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="faq-answer" aria-hidden="true">
            <div class="faq-answer-inner">
              <div class="pb-4 px-6 text-slate-600">
                <p>{faq.answer}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
)}

<script>
  // Smooth FAQ Accordion
  const faqTriggers = document.querySelectorAll('.faq-trigger');

  faqTriggers.forEach((trigger) => {
    trigger.addEventListener('click', () => {
      const item = trigger.closest('.faq-item');
      if (!item) return;

      const answer = item.querySelector('.faq-answer');
      const chevron = trigger.querySelector('.faq-chevron');
      const isOpen = answer?.classList.contains('is-open');

      if (isOpen) {
        // Close
        answer?.classList.remove('is-open');
        chevron?.style.setProperty('transform', 'rotate(0deg)');
        trigger.setAttribute('aria-expanded', 'false');
        answer?.setAttribute('aria-hidden', 'true');
      } else {
        // Open
        answer?.classList.add('is-open');
        chevron?.style.setProperty('transform', 'rotate(180deg)');
        trigger.setAttribute('aria-expanded', 'true');
        answer?.setAttribute('aria-hidden', 'false');
      }
    });
  });
</script>
