---
interface Props {
  icon: string;
  title: string;
  description: string;
  tags: string[];
  href: string;
}

const { icon, title, description, tags, href } = Astro.props;
---

<a
  href={href}
  class="block bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow duration-200 group"
>
  <div class="text-3xl mb-4" aria-hidden="true">{icon}</div>

  <h3 class="text-lg font-semibold text-slate-900 mb-2 group-hover:text-primary transition-colors duration-200">
    {title}
  </h3>

  <p class="text-sm text-slate-500 leading-relaxed mb-4">
    {description}
  </p>

  <div class="flex flex-wrap gap-2 mb-4">
    {tags.map((tag) => (
      <span class="inline-block text-xs font-medium bg-primary/10 text-primary px-2.5 py-1 rounded-full">
        {tag}
      </span>
    ))}
  </div>

  <span class="inline-flex items-center text-sm font-medium text-primary group-hover:gap-2 gap-1 transition-all duration-200">
    Entdecken
    <span aria-hidden="true">&rarr;</span>
  </span>
</a>
