---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import LatestPosts from '../components/LatestPosts.astro';
import Philosophy from '../components/Philosophy.astro';
import Comparison from '../components/Comparison.astro';
import Stats from '../components/Stats.astro';
import Categories from '../components/Categories.astro';
import FunFacts from '../components/FunFacts.astro';
import CallToAction from '../components/CallToAction.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Hundewissen mit Kopf",
  "url": "https://hundewissen-mit-kopf.de",
  "description": "Dein Hundeblog mit evidenzbasiertem Wissen zu Ernährung, Gesundheit, Erziehung & Pflege. Verständlich aufbereitet und frei von Panikmache.",
  "publisher": {
    "@type": "Organization",
    "name": "Hundewissen mit Kopf",
    "url": "https://hundewissen-mit-kopf.de"
  }
};
---

<BaseLayout
  title="Hundeblog – Hundewissen mit Kopf | Ernährung, Gesundheit & Erziehung"
  description="Dein Hundeblog mit evidenzbasiertem Wissen zu Ernährung, Gesundheit, Erziehung & Pflege. Verständlich aufbereitet und frei von Panikmache."
  schemas={[schema]}
>
  <Hero />
  <LatestPosts />
  <Philosophy />
  <Comparison />
  <Stats />
  <Categories />
  <FunFacts />
  <CallToAction />
</BaseLayout>
